      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="container">
  <div class="starter-template">

    <div id="dashboard"></div>

    <p>Group by variable:</p>
    <div class="btn-group" role="group" aria-label="...">
      <button id="graph-id" type="button" class="btn btn-primary">ID</button>
      <button id="graph-platform" type="button" class="btn btn-primary">Platform</button>
      <button id="graph-action" type="button" class="btn btn-primary">Action</button>
    </div>

    <form>
      <div class="form-group">
        <label for="groupby-var">Group by: </label>
        <select class="form-control" id="groupby-var">
          <option>ID</option>
          <option>Platform</option>
          <option>Action</option>
        </select>
      </div>
      <div class="form-group">
        <div class="input-daterange input-group" id="datepicker">
          <input type="text" class="input-sm form-control" name="start">
          <div class="input-group-addon">to</div>
          <input type="text" class="input-sm form-control" name="end">
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div><!-- /.container -->

